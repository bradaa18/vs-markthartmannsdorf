<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="573.0" prefWidth="820.0" styleClass="teacherView" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.vs.vsmarkthartmannsdorf.TeacherViewController">
   <right>
      <VBox id="rightContainer" nodeOrientation="LEFT_TO_RIGHT" prefHeight="553.0" prefWidth="197.0">
         <children>
            <HBox alignment="CENTER" prefHeight="34.0" prefWidth="100.0" spacing="20.0" styleClass="buttonGroup">
               <children>
                  <ImageView id="buttons" fx:id="ivAdd" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#addTeacher" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@add-user.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <ImageView id="buttons" fx:id="ivRemove" fitHeight="25.0" fitWidth="25.0" layoutX="73.0" layoutY="15.0" onMouseClicked="#removeTeacher" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@remove-user.png" />
                     </image>
                  </ImageView>
                  <ImageView id="buttons" fx:id="ivEdit" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#editTeacher" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@pencil.png" />
                     </image>
                  </ImageView>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <ListView id="teacherList" fx:id="teacherList" prefHeight="539.0" prefWidth="250.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ListView>
         </children>
      </VBox>
   </right>
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
